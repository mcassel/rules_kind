#!/usr/bin/env bash
set -o errexit

reg_name={REGISTRY_NAME}
reg_port={REGISTRY_PORT}

if [ "$(docker inspect -f '{{.State.Running}}' "${reg_name}" 2>/dev/null || true)" != 'true' ]; then
  docker run \
    -d --restart=always -p "127.0.0.1:${reg_port}:5000" --network bridge --name "${reg_name}" \
    registry:2
fi
